#include <iostream>
#include <string>
#include <algorithm>
using namespace std;

int main()
{
    string s;
    cin >> s;
    int n = s.length();
    int freq[26] = {0};
    for (int i = 0; i < n; i++)
    {
        freq[s[i] - 'a']++; 
    }
    sort(freq, freq + 26, greater<int>());
    int ans = 0, weight = 26;
    for (int i = 0; i < 26 && freq[i] > 0; i++)
    {
        ans += freq[i] * weight--; 
    }
    cout << ans << endl;
    return 0;
}
